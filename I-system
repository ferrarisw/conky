TEXT
# **********************************************************************
# SISTEMA
# **********************************************************************
${voffset -10}
  ${color4}OS${goto 100}${color0} ${execi 10800 cat /etc/issue.net}
  ${color4}Kernel${goto 100}${color0} ${kernel}
  ${color4}Hostname${goto 100}${color0} ${uid_name 1000} @ ${nodename}
  ${color4}Uptime${goto 100}${color0} ${uptime}
  ${color4}Processes${goto 100}${color0} ${processes} ($running_processes running)

# **********************************************************************
# DISCHI
# **********************************************************************
${color4}${hr 3}${font}
${voffset 5}${goto 80}FREE${goto 150}USED${goto 220}TOTAL${goto 290}USAGE${color1}${voffset 5}
  Home${goto 80}${fs_free /home}${goto 150}${fs_used /home}${goto 220}${fs_size /home}${goto 290}${fs_bar /home}
  Root${goto 80}${fs_free /}${goto 150}${fs_used /}${goto 220}${fs_size /}${goto 290}${fs_bar /}
  Storage${goto 80}${fs_free /home/davide/HD800}${goto 150}${fs_used /home/davide/HD800}${goto 220}${fs_size /home/davide/HD800}${goto 290}${fs_bar /home/davide/HD800}

${color4}${hr 3}${color0}
# **********************************************************************
# RAM
# **********************************************************************

RAM $alignc $mem / $memmax $alignr $memperc%
$membar
SWAP $alignc ${swap} / ${swapmax} $alignr ${swapperc}%
${swapbar}

${top_mem name 1} $alignr ${top_mem mem_res 1}
${top_mem name 2} $alignr ${top_mem mem_res 2}
${top_mem name 3} $alignr ${top_mem mem_res 3}
${top_mem name 4} $alignr ${top_mem mem_res 4}
${top_mem name 5} $alignr ${top_mem mem_res 5}

${color4}${hr 3}${color0}
