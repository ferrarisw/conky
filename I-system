${voffset -10}
${color4}CPU 0${color0}   ${execi 2 sensors|grep 'Core 0'| awk -F'+' '{print $2}' | awk -F'.' '{print $1}'} °C ${alignr}${cpu cpu0} %${color5} 
${cpugraph cpu0}
